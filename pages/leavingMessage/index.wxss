page {
  background-color: #fff;
  padding: 0rpx 0rpx 72rpx 0rpx;
  font-size: 24rpx;
}

.section {
  background-color: #fff;
  padding: 0 20rpx;
}

.banner {
  width: 100%;
  height: 240rpx;
  background-color: #9a9a9a;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.banner>image {
  width: 100%;
  height: 100%;
}

.item {
  margin-bottom: 34rpx;
}

.item .name {
  font-size: 26rpx;
  line-height: 66rpx;
  margin-right: 18rpx;
}

.item .iptBox {
  height: 66rpx;
  border: 1rpx solid #e3e3e3;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.item .iptBox input,
.item .iptBox textarea {
  width: 100%;
  height: 100%;
}

.item .iptBox.message {
  height: 220rpx;
  box-sizing: border-box;
  padding-top: 18rpx;
}

.btn {
  width: 570rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
  background-color: #c28d3f;
  margin-top: 80rpx;
}