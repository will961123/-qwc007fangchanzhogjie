/* pages/user/index.wxss */
page {
  background-color: #f4f4f4;
}

.userInofBox {
  width: 100%;
  height: 210rpx;
  /* background-image: linear-gradient(117deg,
      #e6cda0 0%,
      #eed6ac 17%,
      #f5dfb7 51%,
      #ebcf9d 79%,
      #e1bf82 100%); */
  background-color: #f5dfb8;
  text-align: center;
  box-sizing: border-box;
  padding-top: 30rpx;
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #333333;
}

.userInofBox .headerBox {
  background-color: #fff;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.userInofBox .headerBox>image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.navList {
  padding: 0 22rpx;
  background-color: #fff;
}

.navList .item {
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #333333;
  height: 88rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.navList .item .icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.navList .item:last-child {
  border-bottom: none;
}

.navList .item:last-child .icon {
  width: 27rpx;
}

.navList .item .row {
  width: 12rpx;
  height: 20rpx;
}

.agreement {
  width: 612rpx;
  font-family: MicrosoftYaHei;
  font-size: 18rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 30rpx;
  letter-spacing: 0px;
  color: #a1a1a1;
  margin: 0 auto;
  margin-top: 48rpx;
}